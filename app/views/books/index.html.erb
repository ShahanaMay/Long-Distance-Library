<h2>Books Currently in Your Library</h2>

<div class="sidebar">
  <%= render partial: "layouts/sidebar" %>
</div>

<div class="book-main-content">
  <table>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author_last_name %>, <%= book.author_first_name %></td>
        <td><%= button_to "Edit", edit_book_path(book), method: "get" %></td>
        <td><%= button_to "Delete", book_path(book), method: "delete" %></td>
      </tr>
    <% end %>
  </table>
</div>
